public class NavigationUtils {
    private World world;
    
    public NavigationUtils(World world) {
        this.world = world;
    }
    
    public ArrayList<MapLocation> getRoute(Unit selectedUnit, MapLocation desiredLocation) {
        ArrayList<MapLocation> list = new ArrayList<MapLocation>();
        list.add(new MapLocation(0,1));
        list.add(new MapLocation(0,2));
        list.add(new MapLocation(0,3));
        return list;
    }
}
