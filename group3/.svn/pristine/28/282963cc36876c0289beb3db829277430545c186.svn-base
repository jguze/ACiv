    public void readyUnitForMovement() {
        if (getCurrentlySelectedUnit() == null) {
            return;
        }
        setCommand('g');
        mapView.setCursor(Cursor.getPredefinedCursor(Cursor.HAND_CURSOR));
    }

    /*
