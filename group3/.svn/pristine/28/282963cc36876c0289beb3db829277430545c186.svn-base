    public void nextTurn() {
        ArrayList<City> playerCities = currentPlayer.getCities();
        
        if (!playerCities.isEmpty()) {
            for (City city : playerCities) {
                UnitType unitCreated = city.nextTurn();
                if (unitCreated != null) {
                    createUnit(unitCreated, city.getMapLocation());
                }
            }
        }        
